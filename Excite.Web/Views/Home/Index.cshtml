@model Excite.Web.Models.IndexViewModel

@{
    ViewBag.Title = "Excite Test App";
}

@using (Ajax.BeginForm(new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "divResult"
}))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.ValidationMessageFor(x => x.Text, null, htmlAttributes: new { @class = "text-danger" }, tag: "div")
                @Html.ValidationMessageFor(x => x.SubText, null, htmlAttributes: new { @class = "text-danger" }, tag: "div")
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.TextAreaFor(x => x.Text, htmlAttributes: new { @class = "form-control", placeholder = "Enter Text" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.TextAreaFor(x => x.SubText, htmlAttributes: new { @class = "form-control", placeholder = "Enter Sub-Text" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button type="submit" class="btn btn-primary btn-block btn-lg">Find Indices</button>
            </div>
        </div>
    </div>
}

@if (Model != null && !String.IsNullOrEmpty(Model.Result))
{
    <div class="well panel-success">
        @Html.ValueFor(x => x.Result)
    </div>
}



